{
  "name": "simple-sms-sender",
  "version": "0.0.3",
  "description": "Simple SMS sender to multiple recipients using Twilio",
  "main": "dist/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon lint && yon build-ts",
    "build-ts": "tsc --declaration",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf ./dist",
    "test": "yon lint && jest --forceExit --detectOpenHandles --coverage --verbose",
    "watch-test": "yon test --watchAll",
    "prepublish": "yon test && yon build"
  },
  "private": false,
  "repository": "yorch/simple-sms-sender",
  "files": [
    "dist"
  ],
  "dependencies": {
    "twilio": "3.39.4"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "25.1.0",
    "lint-staged": "10.2.9",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "25.5.1",
    "ts-node": "8.10.2",
    "typescript": "3.9.5",
    "yarn-or-npm": "3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
