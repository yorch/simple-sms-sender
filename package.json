{
  "name": "simple-sms-sender",
  "version": "0.2.1",
  "description": "Simple SMS sender to multiple recipients using Twilio",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/yorch/simple-sms-sender#readme",
  "bugs": {
    "url": "https://github.com/yorch/simple-sms-sender/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yorch/simple-sms-sender"
  },
  "scripts": {
    "build": "npm run check && tsup",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "tsc --noEmit",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "full": "npm run lint && npm run test:coverage && npm run build",
    "clean": "rimraf ./coverage ./dist",
    "prepublishOnly": "yon full",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.52.8",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "20.17.30",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vitest": "3.2.4",
    "yarn-or-npm": "3.0.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "sms",
    "twilio"
  ],
  "packageManager": "yarn@4.9.2"
}
