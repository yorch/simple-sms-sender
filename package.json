{
  "name": "simple-sms-sender",
  "version": "0.0.3",
  "description": "Simple SMS sender to multiple recipients using Twilio",
  "main": "dist/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon lint && yon build-ts",
    "build-ts": "tsc --declaration",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf ./dist",
    "test": "yon lint && jest --forceExit --detectOpenHandles --coverage --verbose",
    "watch-test": "yon test --watchAll",
    "prepublish": "yon test && yon build"
  },
  "private": false,
  "repository": "yorch/simple-sms-sender",
  "files": [
    "dist"
  ],
  "dependencies": {
    "twilio": "3.51.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.16",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.2.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.2",
    "yarn-or-npm": "3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
