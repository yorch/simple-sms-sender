{
  "name": "simple-sms-sender",
  "version": "0.0.3",
  "description": "Simple SMS sender to multiple recipients using Twilio",
  "main": "dist/index.js",
  "author": "Jorge Barnaby <jorge.barnaby@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yon lint && yon build-ts",
    "build-ts": "tsc --declaration",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rimraf ./dist",
    "test": "yon lint && jest --forceExit --detectOpenHandles --coverage --verbose",
    "watch-test": "yon test --watchAll",
    "prepublish": "yon test && yon build"
  },
  "private": false,
  "repository": "yorch/simple-sms-sender",
  "files": [
    "dist"
  ],
  "dependencies": {
    "twilio": "3.62.0"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/jest": "26.0.22",
    "@types/qs": "6.9.6",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.23.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "4.2.4",
    "yarn-or-npm": "3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
